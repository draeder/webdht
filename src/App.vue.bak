<template>
  <div id="app" class="container">
    <header class="header">
      <h1>WebDHT</h1>
      <div class="node-info">
        <p>Node ID: <code>{{ nodeIdShort }}</code></p>
        <p>Connected Peers: <strong>{{ connectedPeers.length }}</strong></p>
        <p class="status" :class="connected ? 'online' : 'offline'">
          {{ connected ? 'ðŸŸ¢ Online' : 'ðŸ”´ Offline' }}
        </p>
        <button @click="openNewWindow" class="btn btn-primary">ðŸš€ Open 2nd Window to Test</button>
      </div>
    </header>

    <main class="main">
      <section class="section settings">
        <h2>Settings</h2>
        <div class="settings-group">
          <label>Signaling Server:</label>
          <input v-model="signalingServer" type="text" placeholder="wss://signal.peer.ooo" class="input" />
          <button @click="reconnectSignaling" class="btn">Reconnect</button>
        </div>
      </section>

      <section class="section peers">
        <h2>Connected Peers</h2>
        <div v-if="connectedPeers.length === 0" class="empty">
          <p>No connected peers yet. Waiting for peers to join...</p>
        </div>
        <ul v-else class="peer-list">
          <li v-for="peer in connectedPeers" :key="peer" class="peer-item">
            <span class="peer-id">{{ peer.substring(0, 16) }}...</span>
          </li>
        </ul>
      </section>

      <section class="section messaging">
        <h2>Messages</h2>
        <div class="message-box">
          <div v-if="messages.length === 0" class="empty">
            <p>No messages yet</p>
          </div>
          <div v-else class="messages">
            <div v-for="(msg, idx) in messages" :key="idx" class="message" :class="msg.outgoing ? 'outgoing' : 'incoming'">
              <span class="msg-peer">{{ msg.peer.substring(0, 8) }}</span>
              <span class="msg-text">{{ msg.text }}</span>
              <span class="msg-time">{{ msg.time }}</span>
            </div>
          </div>
        </div>
        <div class="message-input">
          <select v-model="selectedPeer" class="select">
            <option value="">Broadcast...</option>
            <option v-for="peer in connectedPeers" :key="peer" :value="peer">
              {{ peer.substring(0, 12) }}...
            </option>
          </select>
          <input 
            v-model="messageText" 
            @keyup.enter="sendMessage"
            type="text" 
            placeholder="Type message..." 
            class="input"
          />
          <button @click="sendMessage" class="btn">Send</button>
        </div>
      </section>
    </main>

    <footer class="footer">
      <p>WebDHT - P2P Distributed Hash Table</p>
    </footer>
  </div>
</template>

<script>
import WebDHT from './index.js'
import { PartialMesh } from 'gossip-protocol'

export default {
  name: 'App',
  data() {
    return {
      dht: null,
      mesh: null,
      nodeIdShort: '',
      connectedPeers: [],
      messages: [],
      selectedPeer: '',
      messageText: '',
      signalingServer: 'wss://signal.peer.ooo/ws',
      signalingRoom: 'webdht-test',
      connected: false,
      signalingWs: null,
      clientId: null,
    }
  },
  mounted() {
    this.initDHT()
  },
  methods: {
    initDHT() {
      this.dht = new WebDHT({
        bootstrap: [],
        maxPeers: 10,
        debug: true
      })

      const checkReady = setInterval(() => {
        if (this.dht.nodeId) {
          clearInterval(checkReady)
          this.setupDHTHandlers()
          this.setupMesh()
        }
      }, 100)
    },
    setupMesh() {
      this.mesh = new PartialMesh({
        sessionId: this.signalingRoom,
        minPeers: 1,
        maxPeers: 10,
      })

      this.mesh.on('peer', (peerId, conn) => {
        console.log('âœ… Mesh peer connected:', peerId)
        this.dht.connect({ id: peerId, initiator: false })
      })

      this.mesh.on('signal', (peerId, signal) => {
        console.log('ðŸ“¨ Received signal from', peerId, signal.type)
        if (this.dht.peers.has(peerId)) {
          this.dht.peers.get(peerId).signal(signal)
        } else {
          this.dht.connect({ id: peerId, signal, initiator: false })
        }
      })

      this.mesh.on('disconnect', (peerId) => {
        console.log('âŒ Mesh peer disconnected:', peerId)
        if (this.dht.peers.has(peerId)) {
          this.dht.peers.get(peerId).destroy()
          this.dht.peers.delete(peerId)
          this.updatePeerList()
        }
      })

      this.connected = true
    },
    setupDHTHandlers() {
      const nodeIdHex = this.dht.nodeId.substring(0, 8)
      this.nodeIdShort = nodeIdHex

      this.dht.on('peer:connect', (peerId) => {
        console.log('âœ… DHT peer connected:', peerId)
        this.updatePeerList()
      })

      this.dht.on('peer:disconnect', (peerId) => {
        console.log('âŒ DHT peer disconnected:', peerId)
        this.updatePeerList()
      })

      this.dht.on('signal', (data) => {
        console.log(`ðŸ“¤ Forwarding ${data.signal.type} to ${data.id}`)
        if (this.mesh) {
          this.mesh.signal(data.id, data.signal)
        }
      })
    },
    connectToSignalingServer() {
      const url = this.signalingServer.startsWith('ws') 
        ? `${this.signalingServer}?room=${this.signalingRoom}`
        : `wss://${this.signalingServer}?room=${this.signalingRoom}`

      console.log('Connecting to:', url)
      try {
        this.signalingWs = new WebSocket(url)

        this.signalingWs.onopen = () => {
          console.log('Connected to signaling server')
          this.connected = true
          // UniWRTC auto-registers, no need to send REGISTER
        }

        this.signalingWs.onmessage = (event) => {
          const msg = JSON.parse(event.data)
          console.log('Received from signaling server:', msg.type, msg)
          
          if (msg.type === 'welcome') {
            console.log('âœ… Registered with signaling server, clientId:', msg.clientId)
            // Store our client ID from the server
            this.clientId = msg.clientId
            
            // Request existing peers
            console.log('ðŸ“¡ Requesting peer list...')
            this.signalingWs.send(JSON.stringify({ type: 'get-peers' }))
          }
          
          if (msg.type === 'peers') {
            console.log('ðŸ“‹ Received peer list:', msg.peers.length, 'peers:', msg.peers)
            for (const peerId of msg.peers) {
              if (peerId !== this.clientId && !this.dht.peers.has(peerId)) {
                console.log(`ðŸ”— Connecting to existing peer (initiator=true): ${peerId}`)
                this.dht.connect({ id: peerId, initiator: true })
              }
            }
          }
          
          if (msg.type === 'signal') {
            const peerId = msg.peerId || msg.from
            console.log(`ðŸ“¨ Processing ${msg.signal?.type} signal from ${peerId}`)
            if (this.dht.peers.has(peerId)) {
              this.dht.peers.get(peerId).signal(msg.signal)
            } else {
              console.log(`ðŸ†• Creating new peer connection (initiator=false) to ${peerId}`)
              this.dht.connect({ id: peerId, signal: msg.signal, initiator: false })
            }
          }

          if (msg.type === 'peer-joined') {
            const peerId = msg.peerId
            console.log(`ðŸ‘‹ Peer joined: ${peerId}`)
            if (peerId !== this.clientId && !this.dht.peers.has(peerId)) {
              console.log(`ðŸ”— Connecting to new peer (initiator=true): ${peerId}`)
              this.dht.connect({ id: peerId, initiator: true })
            }
          }
          
          if (msg.type === 'peer-left') {
            const peerId = msg.peerId
            console.log(`Peer left: ${peerId}`)
            if (this.dht.peers.has(peerId)) {
              this.dht.peers.get(peerId).destroy()
              this.dht.peers.delete(peerId)
              this.updatePeerList()
            }
          }
        }

        this.signalingWs.onerror = (err) => {
          console.error('Signaling server error:', err)
          this.connected = false
        }

        this.signalingWs.onclose = () => {
          console.log('Disconnected from signaling server')
          this.connected = false
        }
      } catch (err) {
        console.error('Failed to connect to signaling server:', err)
        this.connected = false
      }
    },
    openNewWindow() {
      window.open(window.location.href, '_blank')
    },
    reconnectSignaling() {
      if (this.mesh) {
        this.mesh.destroy()
      }
      this.setupMesh()
    },
    updatePeerList() {
      this.connectedPeers = Array.from(this.dht.peers.keys())
    },
    sendMessage() {
      if (!this.messageText) return

      const msg = {
        type: 'MESSAGE',
        text: this.messageText,
        from: this.dht.nodeId
      }

      if (this.selectedPeer) {
        const peer = this.dht.peers.get(this.selectedPeer)
        if (peer && peer.connected) {
          peer.send(JSON.stringify(msg))
        }
      } else {
        for (const peer of this.dht.peers.values()) {
          if (peer.connected) {
            peer.send(JSON.stringify(msg))
          }
        }
      }

      this.messages.push({
        peer: this.selectedPeer || 'broadcast',
        text: this.messageText,
        outgoing: true,
        time: new Date().toLocaleTimeString()
      })

      this.messageText = ''
    }
  }
}
</script>

